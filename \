#include "libft.h"

#include <stdio.h>

size_t		count_substr(char const *s, char c)
{
	size_t	i;
	size_t	counter;

	counter = 0;
	i = 0;
	while (s[i] != '\0')
	{
		if (s[i] == c)
			++i;
		if (s[i] != c)\
		{
			while (s[i] != c)
				++i;
			++counter;
			--i;
		}
		++i;
	}
	return (counter);
}

char		**check_pointer(char const *s, char c, size_t size)
{
	char	**str;
	char	*buf;
	size_t	i;
	size_t	j;

	str = (char **)malloc(sizeof(char) * size);
	if (NULL == str)
		return (NULL);
	i = 0;
	j = 0;
	buf = ft_strdup(s);
	if (NULL == buf)
		return (NULL);
	while (buf[i] == c)
		++i;
	str[j++] = &buf[i];
	while (buf[i] != '\0')
	{
		while (buf[i] != c)
			++i;
		if (buf[i] == c)
			str[j++] = &buf[i];
		++i;
	}
	return (str);
}
// ft_strsplit("*hello*fellow***students*", ’*’)
char		**ft_strsplit(char const *s, char c)
{
	size_t	i;
	char	**str;

	if (s && c)
	{
		i = count_substr(s, c);
		if (0 == i)
			return (NULL);
		str = check_pointer(s, c, i);

	}
	return (NULL);
}

int main()
{   
	char **test;
	test = check_pointer("*hello*fellow***students*", '*',);
	

//	printf("%d\n", (int)count_substr("*hello*fellow***students*", '*'));
//	printf("%d\n", (int)count_substr("*hello*fellow***students*", '-'));
//	printf("%d\n", (int)count_substr("", '*'));
//	printf("%d\n", (int)count_substr("******", '*'));\
//	printf("%d\n", (int)count_substr("hellofellowstudents", '*'));
	return (0);
}
